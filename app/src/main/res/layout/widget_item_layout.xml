<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.BakingApp.AppWidgetContainer">

    <ImageView
        android:id="@+id/appwidget_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:scaleType="centerCrop"
        android:maxHeight="@dimen/recipieListItemHeight"
        android:src="@drawable/brownies"/>

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:autoSizeMinTextSize="@dimen/textsizeWidgetText"
        android:contentDescription="@string/brownies"
        android:background="@color/colorPrimary"
        android:textStyle="bold|italic"/>

</LinearLayout>